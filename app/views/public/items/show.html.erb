<h2>商品詳細</h2>
<table class="table">
    <tbody>
    <%= form_for @item do |f| %>
     <tr>
      <td>
       <%= image_tag @item.get_item_image(100,100) %>
        <%= @item.name %>
      </td>
      <td>
        <%= @item.introduction %>
      </td>
      <td>
        <%= @item.price %>円
      </td>
      <td>
        <%= form_with model: @item, url: cart_items_path do |form| %>
         <div class="field">
          <%= form.select :amount, [['1', 1], ['2', 2]], { id: "item_id", class: "amount" } %>
         </div>
         <%= form.submit 'Add to Cart', class: 'btn btn-primary' %>
        <% end %>
      </td>

     </tr>
    <% end %>
    </tbody>
  </table>