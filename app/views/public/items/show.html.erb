<h2>商品詳細</h2>

    <%#= form_with @item do |f| %>
    <%= form_with model: @cart_item, url: cart_items_path, method: :post do |form| %>

          <%= image_tag @item.get_item_image(100,100) %>
          <%= @item.name %>

          <%= @item.introduction %>

          <%= @item.price %>円

         <%= form.hidden_field :item_id, value: @item.id %>

            <div class="field">
              <%= form.select :amount, [['1', 1], ['2', 2]], { id: "item_id", class: "amount" } %>
            </div>
            <%= form.submit 'Add to Cart', class: 'btn btn-primary' %>
          <%# end %>


    <% end %>
