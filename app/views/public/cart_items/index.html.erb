<h2>ショッピングカート</h2>
<td>カートを空にする</td>
<td><%= CartItem.destroy_all </td>
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_item_image(100, 100) %>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.price %>円
        </td>
        <td>
         <%= form_with model: @cart_item, url: cart_items_path do |form| %>
           <div class="field">
            <%= form.select :amount, [['1', 1], ['2', 2]], { id: "item_id", class: "amount" } %>
           </div>
           <%= form.submit 'Add to Cart', class: 'btn btn-primary' %>
         <% end %>
        </td>
        <td><%= cart_item.item.with_tax_price%></td>
        <td><%= cart_item.subtota %></td>
        <% @total += cart_item.subtotal %>

      </tr>
    <% end %>
  </tbody>
</table>