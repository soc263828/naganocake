<h2>注文履歴一覧</h2>
<% @orders.each do |order| %>
  <td>注文日</td>
   <%= order.created_at %>
  <td>配送先</td>
   <%= order.postal_code %>
   <%= order.address %>
   <%= order.name %>
  <td>注文商品</td>

  <td>支払い金額</td>
   <%= order.price %>

  <td>注文詳細</td>
   <%= link_to "表示する", order_path(order.id) %>

 <% end %>