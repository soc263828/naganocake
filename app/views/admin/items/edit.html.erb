<main>
  <p id="notice"></p>
  <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>商品編集</h1>
        <% if @item.errors.any? %>
          <%= @item.errors.count %>error prohibited this obj from being saved:
          <ul>
            <% @item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @item do |f| %>
        <div class="form-group">
        <label for="inputName">商品名</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
        </div>
        <div class="form-group">
        <label for="inputIntroduction">商品説明</label><br>
        <%= f.text_field :introduction, placeholder: "fintroduction" %>
        </div>
         <div class="form-group">
        <label for="inputPrice">税抜価格</label><br>
        <%= f.text_field :price, placeholder: "price" %>
        </div>

        <div class="form-group">
        <%= f.submit "変更を保存" %>
        </div>

        <% end %>

   </div>
  </div>
 </div>
</main>