<main>
  <p id="notice"></p>
  <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2><%= "#{@customer.last_name} #{@customer.first_name}" %>さんの会員情報</h2>
        <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
        <div class="form-group">
        <label for="inputName">姓</label><br>
        <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"last_name"%>
        </div>
        <div class="form-group">
        <label for="inputName">名</label><br>
        <%= f.text_field :first_name, placeholder: "first_name" %>
        </div>
         <div class="form-group">
        <label for="inputName">フリガナ</label><br>
        <%= f.text_field :last_name_kana, placeholder: "last_name_kana" %>
        </div>
         <div class="form-group">
        <label for="inputName">フリガナ</label><br>
        <%= f.text_field :first_name_kana, placeholder: "first_name_kana" %>
        </div>
         <div class="form-group">
        <label for="inputNumber">郵便番号</label><br>
        <%= f.text_field :postal_code %>
        </div>
         <div class="form-group">
        <label for="inputAddress">住所</label><br>
        <%= f.text_field :address %>
        </div>
         <div class="form-group">
        <label for="inputNumber">電話番号</label><br>
        <%= f.text_field :telephone_number %>
        </div>
         <div class="form-group">
        <label for="inputEmail">メールアドレス</label><br>
        <%= f.text_field :email %>
        </div>



        <div class="form-group">
        <%= f.submit "変更を保存" %>
        </div>

        <% end %>

   </div>
  </div>
 </div>
</main>