<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
     <div class="container">
       <a class="nabar-brand">
         <span>Nagano cake</span>
       </a>

       <div class="navbar-collapse collapse">
         <ul class="navbar-nav ml-auto">
           <% if customer_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
               <%= link_to "マイページ", customers_path %>
               </li>
               <li class="nav-item">
               <%= link_to "カート", cart_items_path %>
               </li>
               <li class="nav-item">
               <%= link_to "商品一覧", items_path %>
               </li>
               <li class="nav-item">
               <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
               </li>
               </ul>
           <% elsif admin_signed_in? %>
           <ul class="navbar-nav ml-auto">
              <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path %>
              </li>
              <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path %>
              </li>
              <li class="nav-item">
              <%= link_to "注文履歴一覧", admin_root_path %>
              </li>
              ジャンル一覧
              <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>
              </ul>
           <% else %>
           <ul class="navbar-nav ml-auto">
             <li class="nav-item">
             <%= link_to "会員登録", new_customer_registration_path %>
             </li>
             <li class="nav-item">
             <%= link_to "ログイン", new_customer_session_path %>
             </li>
             <li class="nav-item">
             <%= link_to "about", homes_about_path %>
             </li>
             <li class="nav-item">
             <%= link_to "商品一覧", items_path %>
             </li>
             </ul>
           <% end %>


         </ul>
       </div>
     </div>
   </nav>
  </header>
  <%= yield %>
  </body>
</html>
